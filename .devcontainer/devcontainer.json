{
  "name": "Colegio App",
  "dockerComposeFile": "./docker-compose.dev.yml",
  "service": "dev-container",
  "initializeCommand": "docker compose -f ./.devcontainer/docker-compose.dev.yml down -v",
  "workspaceFolder": "/workspaces",

  "postAttachCommand": "chmod +x ./.devcontainer/entrypoint.dev.sh && /bin/bash -lc ./.devcontainer/entrypoint.dev.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.black-formatter",
        "batisteo.vscode-django",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "bradlc.vscode-tailwindcss"
      ]
    }
  }
}
